{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src"
  ],
  "exclude": [
    "src/app/main",
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@main/*": [
        "src/app/main/*"
      ],
      "@preload/*": [
        "src/app/preload/*"
      ],
      "@renderer/*": [
        "src/app/renderer/*"
      ],
      "@entities/*": [
        "src/entities/*"
      ],
      "@features/*": [
        "src/features/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@widgets/*": [
        "src/widgets/*"
      ],
    }
  }
}
